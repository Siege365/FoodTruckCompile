<BorderPane prefHeight="1024.0" prefWidth="770.0" style="-fx-background-color: #EF3A31;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.softwareproj.AppController">
    <!-- Scrollable content in the center -->
    <center>
        <ScrollPane hbarPolicy="NEVER" prefHeight="1069.0" prefWidth="784.0" style="-fx-background-color: #EF3A31;" vbarPolicy="NEVER">
            <content>
                <AnchorPane prefHeight="1600.0" prefWidth="794.0" style="-fx-background-color: #F8DC93;">
                    <children>
                        <Pane layoutX="56.0" layoutY="37.0" prefHeight="233.0" prefWidth="650.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 50;" styleClass="drop-shadow" stylesheets="@AppFoodTruck.css">
                            <children>
                                <ImageView fitHeight="283.0" fitWidth="263.0" layoutX="398.0" layoutY="-25.0">
                                    <image>
                                        <Image url="@images/driver.png" />
                                    </image>
                                </ImageView>
                                <Label fx:id="Userlabel" layoutX="22.0" layoutY="11.0" prefHeight="70.0" prefWidth="489.0" text="Hello, &lt;Username&gt;!">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                            </children>
                        </Pane>
                        <TableView layoutX="56.0" layoutY="317.0" prefHeight="200.0" prefWidth="652.0" style="-fx-background-radius: 20;" styleClass="inner-shadow" stylesheets="@AppFoodTruck.css">
                            <columns>
                                <TableColumn prefWidth="75.0" text="Order ID" />
                                <TableColumn prefWidth="75.0" text="C2" />
                                <TableColumn prefWidth="110.0" text="Delivery Rider" />
                                <TableColumn prefWidth="89.0" text="Date" />
                                <TableColumn prefWidth="75.0" text="Total" />
                                <TableColumn prefWidth="130.0" text="Status" />
                            </columns>
                        </TableView>
                        <Pane layoutX="56.0" layoutY="570.0" prefHeight="303.0" prefWidth="650.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" styleClass="inner-shadow" stylesheets="@AppFoodTruck.css" />
                        <Pane layoutX="56.0" layoutY="927.0" prefHeight="303.0" prefWidth="650.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" styleClass="inner-shadow" stylesheets="@AppFoodTruck.css" />
                  <AnchorPane fx:id="op" prefHeight="1600.0" prefWidth="772.0" style="-fx-background-color: pink;" visible="false" />
                  <AnchorPane fx:id="fp" prefHeight="1600.0" prefWidth="783.0" style="-fx-background-color: blue;" visible="false" />
                  <AnchorPane fx:id="mp" prefHeight="1600.0" prefWidth="794.0" style="-fx-background-color: cyan;" visible="false" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </center>

    <!-- Footer fixed at the bottom -->
    <bottom>
        <Pane fx:id="footer" prefHeight="103.0" prefWidth="770.0" style="-fx-background-color: #EF3A31;">
            <children>
                <Button layoutX="14.0" layoutY="15.0" mnemonicParsing="false" onAction="#toHome" prefHeight="50.0" prefWidth="193.0" style="-fx-background-color: transparent;" styleClass="scroll-button" text="Home" textFill="#f8dc93">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@images/home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button layoutX="212.0" layoutY="15.0" mnemonicParsing="false" onAction="#toOrder" prefHeight="50.0" prefWidth="178.0" style="-fx-background-color: transparent;" styleClass="scroll-button" text="Orders" textFill="#f8dc93">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@images/list.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button layoutX="411.0" layoutY="15.0" mnemonicParsing="false" onAction="#toFood" prefHeight="50.0" prefWidth="161.0" style="-fx-background-color: transparent;" styleClass="scroll-button" text="Food" textFill="#f8dc93">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@images/tacos.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
                <Button layoutX="583.0" layoutY="15.0" mnemonicParsing="false" onAction="#toMore" prefHeight="50.0" prefWidth="163.0" style="-fx-background-color: transparent;" styleClass="scroll-button" text="More" textFill="#f8dc93">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@images/circle.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </bottom>
   <top>
            <Pane prefHeight="144.0" prefWidth="770.0" style="-fx-background-color: #EF3A31;" stylesheets="@AppFoodTruck.css" BorderPane.alignment="CENTER">
                <children>
                    <Label layoutX="28.0" layoutY="48.0" prefHeight="70.0" prefWidth="489.0" style="-fx-text-fill: #F8DC93;" text="El Pedidos Mexicanos">
                        <font>
                            <Font name="System Bold" size="42.0" />
                        </font>
                    </Label>
                    <Button layoutX="632.0" layoutY="41.0" mnemonicParsing="false" prefHeight="82.0" prefWidth="118.0" style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="77.0" fitWidth="86.0">
                                <image>
                                    <Image url="@images/basket.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </Pane>
   </top>
</BorderPane>
