<AnchorPane prefHeight="1024.0" prefWidth="774.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.softwareproj.RegisterController">
   <children>
      <ImageView fx:id="regpng" fitHeight="1036.0" fitWidth="796.0" preserveRatio="true">
         <image>
            <Image url="@images/Frame21.png" />
         </image>
         <viewport>
            <Rectangle2D height="1024.0" width="770.0" />
         </viewport>
      </ImageView>
      <AnchorPane prefHeight="1028.0" prefWidth="774.0">
         <children>
            <TextField fx:id="emailtf" layoutX="211.0" layoutY="396.0" prefHeight="42.0" prefWidth="342.0" promptText="Email" styleClass="transparent-text-field" stylesheets="@RegisterPageCss.css">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="fntf" layoutX="211.0" layoutY="477.0" prefHeight="42.0" prefWidth="342.0" promptText="Full Name" styleClass="transparent-text-field" stylesheets="@RegisterPageCss.css">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="usertf" layoutX="211.0" layoutY="552.0" prefHeight="41.0" prefWidth="342.0" promptText="Username" styleClass="transparent-text-field" stylesheets="@RegisterPageCss.css">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordtf" layoutX="211.0" layoutY="650.0" prefHeight="42.0" prefWidth="342.0" promptText="Password" styleClass="transparent-text-field" stylesheets="@RegisterPageCss.css">
